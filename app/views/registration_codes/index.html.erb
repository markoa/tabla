<h1>Listing registration codes</h1>

<table>
  <tr>
    <th>Code</th>
    <th>Used</th>
    <th>User</th>
  </tr>

<% for rcode in @reg_codes %>
  <tr>
    <td><%=h rcode.code %></td>
    <td><%= rcode.used? ? "Y" : "Pending"  %></td>
    <td><%=h rcode.user.nickname unless rcode.user.nil? %></td>
    <% if not rcode.used? -%>
    <td><%= link_to 'Destroy', rcode, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end -%>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New registration code', new_registration_code_path %>
