<% content_for :head do -%>
  <%= stylesheet_link_tag "syntax", :media => "all" %>

  <script type="text/javascript">
    document.observe("dom:loaded", function() {
      $$('pre').invoke('addClassName', 'syntax');
    });
  </script>
<% end %>

<h1> <%=h @page.name %> </h1>

<%= wikify @page.content %>

<small>
  Last updated by <%= @page.last_updater.nickname %>
  at <%= @page.last_updated_at.to_s(:long) %>
</small> <br />
<%= link_to 'Edit', edit_page_path(@page) %> |
<%= link_to "#{suffixed_number(@page.revisions.size)} revision", page_revisions_path(@page) %> |
<%= link_to 'Delete', @page, :confirm => 'Are you sure? This will delete all revisions.', :method => :delete %> |
<%= link_to 'Page index', pages_path %>
